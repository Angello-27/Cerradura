<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppCompatTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="AppCompatTextView.Title" parent="AppTheme.AppCompatTextView">
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>


</resources>
